<h1>Payment</h1>
<form action="/payment/results">
  <div>
    <label for="apr_input ">
      APR
    </label>

    <input id="apr_input " text="text" name="user_apr" placeholder="E.g. 1.5" autocomplete="off">
  </div>
  <div>
    <label for="years_input of years">
      Number of years
    </label>

    <input id="years_input" text="text" name="user_years" placeholder="E.g. 1.5" autocomplete="off">
  </div>

  <div>
    <label for="principal_input">
      Principal
    </label>

    <input id="principal_input" text="text" name="user_pv" placeholder="E.g. 4.5">
  </div>

  <button>
    Calculate monthly payment
  </button>
</form>
